{% extends 'base.html.twig' %}
 
{% block body %}
<body class="index-page">
 
    <!-- En-tête du site -->
    <!-- Site header -->
    <header id="header" class="header d-flex align-items-center ">
 
        <div class="container-fluid container-xl position-relative d-flex align-items-center">
            <!-- Logo du site -->
            <!-- Site logo -->
            <img class="img-fluid" style="width: 70px;" src="/assets/img/logo.jpg" alt="logo">
 
            <!-- Nom du site -->
            <!-- Site name -->
            <a href="/" class="logo d-flex align-items-center me-auto">
                <h1 class="sitename">TechRescue</h1>
            </a>

            <!-- Menu de navigation -->
            <!-- Navigation menu -->
            <nav id="navmenu" class="navmenu">
                <ul>
                    <li>
                        <a href="/" class="active">Accueil<br></a>
                    </li>
 
                    {% if is_granted('ROLE_ADMIN') %}
                        <!-- Menu pour les administrateurs -->
                        <!-- Menu for administrators -->
                        <li><a href="/admin">Admin</a></li>
                        <li><a href="/reports">Rapports</a></li>
                        <li><a href="/dashboard">Tableau de bord</a></li>
                    
                        <li class="dropdown">
                            <a href="#">
                                <span>Menu</span>
                                <i class="bi bi-chevron-down toggle-dropdown"></i>
                            </a>
                            <ul>
                                <li><a href="/#services">Services</a></li>
                                <li><a href="/#pricing">Tarifs</a></li>
                                <li><a href="/#faq">F.A.Q</a></li>
                                <li><a href="/#testimonials">Testimonials</a></li>
                                <li><a href="/#team">Team</a></li>
                                <li><a href="/blog">Blog</a></li>
                            </ul>
                        </li>
                        <li><a href="/#contact">Contact</a></li>
                    {% elseif is_granted('ROLE_TECHNICIEN') %}
                        <!-- Menu pour les techniciens -->
                        <!-- Menu for technicians -->
                        <li><a href="/technicien">Techniciens</a></li>
                        <li><a href="/reports">Rapports</a></li>
                    {% else %}
                        {% if app.user %}
                            <!-- Menu pour les utilisateurs connectés -->
                            <!-- Menu for logged-in users -->
                            <li><a href="/mytickets">Tickets</a></li>
                        {% endif %}
                        <li class="dropdown">
                            <a href="#">
                                <span>Menu</span>
                                <i class="bi bi-chevron-down toggle-dropdown"></i>
                            </a>
                            <ul>
                                <li><a href="/#services">Services</a></li>
                                <li><a href="/#pricing">Tarifs</a></li>
                                <li><a href="/#faq">F.A.Q</a></li>
                                <li><a href="/#testimonials">Testimonials</a></li>
                                <li><a href="/#team">Team</a></li>
                                <li><a href="/blog">Blog</a></li>
                            </ul>
                        </li>
                        <li><a href="/#contact">Contact</a></li>
                    {% endif %}
 
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
 
            <!-- Boutons de connexion/déconnexion -->
            <!-- Login/Logout buttons -->
            {% if app.user %}
                <a class="btn-getstarted flex-md-shrink-0" href="/logout">Deconnexion</a>
            {% else %}
                <a class="btn-getstarted flex-md-shrink-0" href="/login">Connexion</a>
                <a class="btn-getstarted flex-md-shrink-0" href="/inscription">Inscription</a>
            {% endif %}
 
        </div>
    </header>
</body>
{% endblock %}